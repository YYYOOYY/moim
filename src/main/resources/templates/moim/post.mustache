{{> /common/header }}
<div class="py-2 border-bottom">
	<h5 class="fs-5">#다양한 모임을 한눈에 확인하세요.</h5>
</div>
<div class="flex-wrap row p-3">
	{{#posts}}
	<div class="col-md-6 col-lg-4 px-1 py-2" style="font-size: 0.7em">
		<div class="card">
			<div class="card-header">
				<span class="card-subtitle text-body-secondary ">{{cate}}</span>
			</div>
			<div class="card-body">
				<h5 class="card-title mb-0">{{title}}</h5>
				<p class="card-text" style="height: 40px; font-size: 0.9rem">
					{{description}}</p>
				<div class="text-end">
					<a href="/moim/detail?moimId={{id}}"
						class="stretched-link link-secondary" style="font-size: 0.5rem">자세히</a>
				</div>
			</div>
			<div class="card-footer text-end">
				<span>모임주최자:{{manager.nick}}</span>
			</div>
		</div>
	</div>
	{{/posts}}
    		<ul class="pagination paginatio-sm">
			<li class="page-item disabled"><a  class="page-link">Previous</a></li>
			{{#pages}}
				<li class="page-item"><a href="/moim/post?page={{.}}" class="page-link">{{.}}</a></li>
			{{/pages}}
			<li class="page-item"><a class="page-link" href="#">Next</a></li>
		</ul>
</div>
{{ > /common/footer }}